<% provide :title_tag, 'Recently Played' %>

<%= render 'most_played' %>

<%= search_form_for @q do |f| %>
  <%= f.search_field :track_or_artist_name_cont, placeholder: 'Search artist or song' %>
  <%= f.submit %>
<% end %>

<h1>Recently Played</h1>
<table>
  <thead>
    <th>Artist</th>
    <th>Song</th>
    <th>Release</th>
    <th>Label</th>
    <th>Played at</th>
  </thead>
  <tbody>
  <% @spins.each do |spin| %>

    <%= render "spin", spin: spin %>

  <% end %>
  </tbody>
</table>

<%= pagy_nav(@pagy).html_safe %>
